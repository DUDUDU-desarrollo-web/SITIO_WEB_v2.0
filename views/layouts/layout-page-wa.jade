            abbr(title='Hola, en que te podemos ayudar :)')
                a.link_flotante_wp(href='https://api.whatsapp.com/send?phone=940826034&text=Hola,%20vengo%20de%20su%20sitio%20web.', target='_blank', rel='noopener noreferrer')
                    i.fa-brands.fa-whatsapp.fa-3x
        block content
        //- Menu, p√°gina actual
        script.
                const quienesSomosMe = document.getElementById("quienes_somos_me");
                const serviciosMe = document.getElementById("servicios_me");
                const portafolioMe = document.getElementById("portafolio_me");

                if (document.title == 'QUIENES SOMOS') {
                    quienesSomosMe.classList.add("quienes_somos_me_a");
                } else if (document.title == 'SERVICIOS') {
                    serviciosMe.classList.add("servicios_me_a");
                } else if (document.title == 'PORTAFOLIO') {
                    portafolioMe.classList.add("portafolio_me_a");
                }

