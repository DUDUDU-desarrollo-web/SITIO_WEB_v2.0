block body
    body.quienes_somos
        //- La cabecera de las paginas secundarias
        header.cabecera_estandar
            nav.menu_estandar
                .logo_me
                    a(href='/')
                        img(src='/assets/brand/Logo_DUDUDU_blanco.webp', alt='Logo DUDUDU')
                .pag_sec_me
                    .quienes_somos_me#quienes_somos_me
                        a(href='/quienes-somos') QUIENES SOMOS
                    .servicios_me#servicios_me
